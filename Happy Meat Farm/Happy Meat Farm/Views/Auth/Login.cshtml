
@model NhanVien
@{
    ViewData["Title"] = "Trang đăng nhập";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Đăng nhập</div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="TenTaiKhoan" class="form-label"></label>
                            <input asp-for="TenTaiKhoan" class="form-control" />
                            <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Passwork" class="form-label"></label>
                            <input asp-for="Passwork" type="password" class="form-control" />
                            <span asp-validation-for="Passwork" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>