
@model NhanVien
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<h1 class="form-group">HAPPY MEAT FARM</h1>
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}
<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="TenTaiKhoan">Tài Khoản</label>
        <input type="text" class="form-control" id="TenTaiKhoan" name="TenTaiKhoan" placeholder="Nhập tên đăng nhập">
    </div>
    <div class="form-group">
        <label for="password">Mật Khẩu</label>
        <input type="password" class="form-control" id="Passwork" name="Passwork" placeholder="Nhập mật khẩu">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary button">Login</button>
    </div>
</form>
<script>
    $(document).ready(function() {
        $("#login-form").submit(function(e) {
            e.preventDefault();

            var formData = {
                TenTaiKhoan: $("#TenTaiKhoan").val(),
                Passwork: $("#Passwork").val()
            };

            $.ajax({
                type: "POST",
                url: "@Url.Action("Login", "Account")",
                data: JSON.stringify(formData),
                contentType: "application/json",
                success: function(data) {
                    window.location.href = "@Url.Action("Index", "Home")";
                },
                error: function(jqXHR, textStatus, errorThrown) {
                    alert("Đăng nhập không thành công: " + errorThrown);
                }
            });
        });
    });
</script>




