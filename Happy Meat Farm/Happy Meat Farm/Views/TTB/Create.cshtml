@model Happy_Meat_Farm.Models.TTBModel

@{
    ViewData["Title"] = "Thêm Thiết Bị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Thêm mới trang thiết bị</h2>

<form method="post" asp-action="CreatePost">
    <div class="form-group">
        <label asp-for="TenTrangThietBi" class=""> Tên trang thiết bị </label>
        <input asp-for="TenTrangThietBi" type="text" class="form-control" />
        <span asp-validation-for="TenTrangThietBi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LoaiTrangThietBi" class=""> Loại trang thiết bị  </label>
        <input asp-for="LoaiTrangThietBi" class="form-control" />
        <span asp-validation-for="LoaiTrangThietBi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KichThuoc" class=""> Kích Thước  </label>
        <input asp-for="KichThuoc" class="form-control" />
        <span asp-validation-for="KichThuoc" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="ChatLieu" class=""> Chất Liệu  </label>
        <input asp-for="ChatLieu" class="form-control" />
        <span asp-validation-for="ChatLieu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NSX" class=""> Ngày sản xuất </label>
        <input asp-for="NSX" type="date" class="form-control" />
        <span asp-validation-for="NSX" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HanDung" class=""> Hạn Sử Dụng </label>
        <input asp-for="HanDung" class="form-control" />
        <span asp-validation-for="HanDung" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DonGia" class=""> Đơn Giá </label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
