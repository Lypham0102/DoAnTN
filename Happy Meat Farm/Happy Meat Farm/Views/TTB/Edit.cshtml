@model Happy_Meat_Farm.Models.TTBModel

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Thay đổi thông tin trang thiết bị</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_id" class="control-label">ID</label>
                <input asp-for="_id" class="form-control" />
                <span asp-validation-for="_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenTrangThietBi" class="control-label">Tên trang thiết bị</label>
                <input asp-for="TenTrangThietBi" class="form-control" />
                <span asp-validation-for="TenTrangThietBi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiTrangThietBi" class="control-label">
                    Loại trang thiết bị
                </label>
                <input asp-for="LoaiTrangThietBi" class="form-control" />
                <span asp-validation-for="LoaiTrangThietBi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KichThuoc" class="control-label">Kích thước</label>
                <input asp-for="KichThuoc" class="form-control" />
                <span asp-validation-for="KichThuoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatLieu" class="control-label">Chất liệu</label>
                <input asp-for="ChatLieu" class="form-control" />
                <span asp-validation-for="ChatLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NSX" class="control-label">Ngày sản xuất</label>
                <input asp-for="NSX" class="form-control" />
                <span asp-validation-for="NSX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HanDung" class="control-label">Hạn sử dụng</label>
                <input asp-for="HanDung" class="form-control" />
                <span asp-validation-for="HanDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label">Đơn giá</label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_idBayDan" class="control-label">Thuộc chuồng</label>
                <input asp-for="_idBayDan" class="form-control" />
                <span asp-validation-for="_idBayDan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

