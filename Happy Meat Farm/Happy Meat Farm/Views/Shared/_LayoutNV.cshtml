    <script>function toggleQrCode(button) {
            var img = button.nextElementSibling; // Lấy phần tử anh em tiếp theo của nút
            if (img.classList.contains("hidden")) {
                img.classList.remove("hidden"); // Xoá lớp "hidden" để hiển thị hình ảnh mã QR code
            } else {
                img.classList.add("hidden"); // Thêm lớp "hidden" để ẩn hình ảnh mã QR code
            }
        }</script>
    <script>// Lấy giá trị của thẻ có id là "temp"

        // Truy cập đối tượng HTML có id là "temp"
        var tempElement = document.getElementById("temp");

        // Lấy giá trị của phần tử HTML "temp"
        var tempValue = tempElement.innerHTML;

        // Chuyển đổi giá trị nhiệt độ thành số nguyên
        var temperature = parseInt(tempValue);

        // Tạo AJAX request
        var xhr = new XMLHttpRequest();
        xhr.open("POST", "/HomeController/ProcessTemperature", true);
        xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");

        // Gửi giá trị nhiệt độ dưới dạng JSON
        xhr.send(JSON.stringify({ temperature: temperature }));</script>
