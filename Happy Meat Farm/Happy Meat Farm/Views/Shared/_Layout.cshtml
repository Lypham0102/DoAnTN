<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Happy Meat Farm</title>
    <!--My CSS-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!--Get Boostrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>
<body>
    <div class="sidebar-container">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand ">
                <img src="~/images/PigLogo3.png" alt="#">
                <h4 class="text-white">
                    <span class=""> 
                    </span>Happy Meat Farm
                </h4>
                <div class="sidebar-menu">
                    <ul>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="Index">
                                <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                    <i class='bx bx-home'><span>Tổng quan trang trại</span></i>
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black-50 font-weight-bold" asp-area=" " asp-controller="NhanVien" asp-action="Index">
                                <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                    <i class='bx bx-male-female'><span>Quản lý nhân sự</span></i>
                                </button>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="QuanLyCongViec">
                                <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                    <i class='bx bx-task'><span>Quản lý công việc</span></i>
                                </button>
                            </a>
                        </li>
                        <p>
                            <button class="btn btn-link text-black-50 font-weight-bold" type="button" id="collapse-btn" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                <i class='bx bx-bell'><span>Quản lý vật nuôi</span></i>
                            </button>
                        </p>
                        <div class="collapse-menu">
                            <ul class="link-list">
                                <li>
                                    <a class="nav-link text-black-50" asp-area=" " asp-controller="Home" asp-action="QuanLyVatNuoi">
                                        <span class="text"> Thêm vật nuôi</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-black-50" asp-area=" " asp-controller="Home" asp-action="ThemChuong">
                                        <span class="text">Thêm chuồng</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link text-black-50" asp-area=" " asp-controller="Home" asp-action="XuatChuong">
                                        <span class="text">Xuất chuồng</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="QuanLyBanHang">
                                <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                    <i class='bx bx-cart'><span>Quản lý giao dịch</span></i>
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="ThongKe">
                                <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                    <i class='bx bx-bar-chart-alt-2'><span>Thống kê</span></i>
                                </button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </div>
    <div class="main-content">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-color border-bottom box-shadow mb-3">
            <div class="dropdown">
                <a class="btn btn-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class='bx bx-cog'></i> Chào,Khôi Nguyên
                </a>

                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Thông tin</a></li>
                    <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                    <li><a class="dropdown-item" href="#">Đăng xuất</a></li>
                </ul>
            </div>

            <form class="d-flex search-wrapper" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>


        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Happy Meat Farm - Project Design - VJIT <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--Get Boostrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
