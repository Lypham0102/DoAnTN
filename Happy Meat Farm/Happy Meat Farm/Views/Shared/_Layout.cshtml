<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Happy Meat Farm</title>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-database.js"></script>
    <!--My CSS-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!--Get Boostrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    @*<div class="loader_bg">
        <div class="loader"><img src="~/images/load.gif" alt="#" /></div>
    </div>*@
    <div class="sidebar-container">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand ">
                <h4 class="text-black-50 font-weight-bold">
                    HAPPY MEAT FARM
                </h4>
            </div>
            <div class="sidebar-menu">
                <ul>
                    <li class="nav-item sidebar-item">
                        <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="Index">
                            <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                <i class='bx bx-home'><span>Tổng quan trang trại</span></i>
                            </button>
                        </a>
                    </li>
                    <li class="nav-item sidebar-item">
                        <a class="nav-link font-weight-bold" asp-area=" " asp-controller="NhanVien" asp-action="Index">
                            <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                <i class='bx bx-male-female'><span>Quản lý nhân sự</span></i>
                            </button>
                        </a>

                    </li>
                    <li class="nav-item sidebar-item">
                        <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="QuanLyCongViec">
                            <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                <i class='bx bx-task'><span>Quản lý công việc</span></i>
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                        <i class='bx bx-bell'><span>Quản lý vật nuôi</span></i>
                                    </button>
                                </h2>
                                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="BayDan" asp-action="Index">
                                            <span class="text">Danh Sách Bầy Đàn</span>
                                        </a>
                                    </div>
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="VatNuoi" asp-action="ThemVatNuoi">
                                            <span class="text">Thêm vật nuôi</span>
                                        </a>
                                    </div>
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="VatNuoi" asp-action="ThemChuong">
                                            <span class="text">Thêm chuồng</span>
                                        </a>
                                    </div>
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="VatNuoi" asp-action="XuatChuong">
                                            <span class="text">Xuất chuồng</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                                        <i class='bx bx-store-alt'><span>Quản Lý Kho</span></i>
                                    </button>
                                </h2>
                                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="" asp-action="">
                                            <span class="text">Quản Lý Thức Ăn</span>
                                        </a>
                                    </div>
                                </div>
                                <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="" asp-action="">
                                            <span class="text">Quản Lý Công Cụ</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                                        <i class='bx bx-cart'><span>Quản lý giao dịch</span></i>
                                    </button>
                                </h2>
                                <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="" asp-action="">
                                            <span class="text">Giao Dịch Nhập </span>
                                        </a>
                                    </div>
                                </div>
                                <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <a class="nav-link text-black-50" asp-controller="" asp-action="">
                                            <span class="text">Giao Dịch Xuất </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </li>
                    <li class="nav-item sidebar-item">
                        <a class="nav-link font-weight-bold" asp-area=" " asp-controller="Home" asp-action="ThongKe">
                            <button class="btn btn-link text-black-50 font-weight-bold" type="button">
                                <i class='bx bx-bar-chart-alt-2'><span>Thống kê</span></i>
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <script src="~/js/script.js"></script>
    <div class="main-content">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-color border-bottom box-shadow mb-3">
            <div class="dropdown">
                <a class="btn btn-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class='bx bx-cog'></i> Chào,Khôi Nguyên
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Thông tin</a></li>
                    <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                    <li><a class="dropdown-item" asp-area=" " asp-controller="Auth" asp-action="Logout" href="#">Đăng xuất</a></li>
                </ul>
            </div>

            <form class="d-flex search-wrapper" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - <a asp-area="" asp-controller="Home" asp-action="Index"> Happy Meat Farm 17 Mar Version</a>- Project Design 3 - VJIT
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- The core Firebase JS SDK is always required and must be listed first -->

    <script src="https://firebase.google.com/docs/web/setup#available-libraries"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-database.js"></script>

    <!-- TODO: Add SDKs for Firebase products that you want to use
=======
    <!--https://firebase.google.com/docs/web/setup#available-libraries--> 
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-database.js"></script>

    <!-- TODO: Add SDKs for Firebase products that you want to usehttps://firebase.google.com/docs/web/setup#available-libraries -->

    <script src="https://www.gstatic.com/firebasejs/8.6.7/firebase-analytics.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--Get Boostrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @*<script src="~/js/JavaScript.js"></script>*@

</body>
</html>
