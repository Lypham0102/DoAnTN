@model IEnumerable<Happy_Meat_Farm.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách nhân viên</h1>

<p>
    <a asp-action="Create">Thêm nhân viên</a>
</p>
<table class="table"">
    <thead>
        <tr>
            <th style="width:180px"> Mã nhân viên </th>
            <th style="width:250px"> Tên nhân viên </th>
            @*<th style="width:120px"> CCCD </th>
            <th style="width:120px"> SĐT</th>
            <th style="width:150px"> Địa chỉ </th>*@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item._id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.MaNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNV)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>*@
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { Name = item.TenNV }) |
                @Html.ActionLink("Chi tiết", "Details", new { Name = item.TenNV }) |
                @Html.ActionLink("Xóa", "Delete", new { Name = item.TenNV })
            </td>
        </tr>
}
    </tbody>
</table>
