@model Happy_Meat_Farm.Models.ThuocModel

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-image: none;
        background-size: cover;
        background-position: center;
    }
</style>
<div class="container">
    <h1 class="text-center mt-5 mb-4">Chỉnh sửa thông tin thuốc</h1>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Thông tin thuốc</h4>
                    <hr />
                    <form asp-action="EditPost">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="TenThuoc" class="control-label">Tên thuốc</label>
                            <input asp-for="TenThuoc" class="form-control" />
                            <span asp-validation-for="TenThuoc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NSX" class="control-label">Ngày sản xuất</label>
                            <input asp-for="NSX" class="form-control" />
                            <span asp-validation-for="NSX" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LoaiThuoc" class="control-label">Loại thuốc</label>
                            <input asp-for="LoaiThuoc" class="form-control" />
                            <span asp-validation-for="LoaiThuoc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ChiDinh" class="control-label">Chỉ định</label>
                            <input asp-for="ChiDinh" class="form-control" />
                            <span asp-validation-for="ChiDinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LieuLuong" class="control-label">Liều lượng</label>
                            <input asp-for="LieuLuong" class="form-control" />
                            <span asp-validation-for="LieuLuong" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DungTich" class="control-label">Dung tích</label>
                            <input asp-for="DungTich" class="form-control" />
                            <span asp-validation-for="DungTich" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SoLuong" class="control-label">Số lượng</label>
                            <input asp-for="SoLuong" class="form-control" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DonGia" class="control-label">Đơn giá</label>
                            <input asp-for="DonGia" class="form-control" />
                            <span asp-validation-for="DonGia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="HanDung" class="control-label">Hạn dùng</label>
                            <input asp-for="HanDung" class="form-control" />
                            <span asp-validation-for="HanDung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<div style="height: 50px;"></div>


